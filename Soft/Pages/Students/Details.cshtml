@model Contoso.Soft.Pages.Students.StudentsModel
@using ContosoRazorKoopia.Pages.Extensions

@{
    Layout = "_Details";
    ViewData["Title"] = "Details";
    ViewData["Page"] = "Students";
    ViewData["ItemId"] = Model.Student.ID;
}



@Html.Show(model => model.Student.EnrollmentDate)

@Html.Show(model => model.Student.LastName)

@Html.Show(model => model.Student.FirstMidName)

<dd class="col-sm-10">
    <table class="table">
        <tr>
            <th>Course Title</th>
            <th>Grade</th>
        </tr>
        @foreach (var item in Model.Student.Enrollments) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
            </tr>
        }
    </table>
</dd>
    
